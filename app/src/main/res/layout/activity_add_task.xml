<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:translationZ="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminateTint="@color/white"
        android:visibility="invisible"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_text"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/title_label"
                android:textColor="@color/white">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/card_shape_white"
                app:cursorColor="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">
                <com.example.taskmanager.view_item.TaskTextView
                    android:id="@+id/title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/card_shape_white"
                    android:textColor="@color/gray_huge">
                </com.example.taskmanager.view_item.TaskTextView>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_label"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/card_shape_white"
                app:cursorColor="@color/gray"
                app:boxStrokeWidth="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">
                <com.example.taskmanager.view_item.TaskTextView
                    android:id="@+id/details_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:layout_margin="3dp"
                    android:background="@drawable/card_shape_white"
                    android:textColor="@color/gray_huge">
                </com.example.taskmanager.view_item.TaskTextView>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/label_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_label"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white">
            </TextView>
            <com.example.taskmanager.view_item.DateTextView
                android:id="@+id/date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/card_shape_white"
                android:textColor="@color/gray_huge"
                android:inputType="none"
                android:focusable="false"
                android:autofillHints="">
            </com.example.taskmanager.view_item.DateTextView>

            <TextView
                android:id="@+id/label_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/priority_label_text"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/card_shape_white"
                android:padding="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
                <com.example.taskmanager.view_item.DropDown
                    android:id="@+id/priority_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_margin="3dp"
                    android:background="@drawable/card_shape_white"
                    android:textColor="@color/gray_huge"
                    android:hint="@string/priority_label">
                </com.example.taskmanager.view_item.DropDown>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/label_recurring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recurring_label_text"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:boxStrokeWidth="0dp"
                    android:padding="5dp"
                    android:background="@drawable/card_shape_white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
                    <com.example.taskmanager.view_item.DropDown
                        android:id="@+id/recurring_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_margin="3dp"
                        android:background="@drawable/card_shape_white"
                        android:textColor="@color/gray_huge"
                        android:hint="@string/none_hint">
                    </com.example.taskmanager.view_item.DropDown>
                </com.google.android.material.textfield.TextInputLayout>
                <com.example.taskmanager.view_item.DateTextView
                    android:id="@+id/until_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:hint="@string/until_none"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/card_shape_gray_very_huge"
                    android:textColor="@color/white"
                    android:inputType="none"
                    android:focusable="false"
                    android:autofillHints="">
                </com.example.taskmanager.view_item.DateTextView>
            </LinearLayout>

            <TextView
                android:id="@+id/label_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_label"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <com.example.taskmanager.view_item.DateTextView
                    android:id="@+id/notify_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:hint="@string/date_none"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/card_shape_gray_very_huge"
                    android:textColor="@color/white"
                    android:inputType="none"
                    android:focusable="false"
                    android:autofillHints="">
                </com.example.taskmanager.view_item.DateTextView>
                <com.example.taskmanager.view_item.TimeTextView
                    android:id="@+id/notify_time_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:hint="@string/time_none"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/card_shape_gray_very_huge"
                    android:textColor="@color/white"
                    android:inputType="none"
                    android:focusable="false"
                    android:autofillHints="">
                </com.example.taskmanager.view_item.TimeTextView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

        <LinearLayout
            android:id="@+id/linear_button"
            android:baselineAligned="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_very_huge">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/card_shape_green_lite"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="140dp">
                <Button
                    android:id="@+id/add_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_shape_green_lite"
                    android:textColor="@color/green_lite"
                    android:layout_margin="1dp"
                    android:text="@string/add_button_label"
                    android:layout_gravity="center"
                    style="?android:attr/buttonStyleSmall">
                </Button>
            </LinearLayout>


        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
