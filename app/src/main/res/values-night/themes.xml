<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Theme.TaskManager" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_huge</item>
        <item name="colorPrimaryVariant">@color/gray_huge</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_very_huge</item>
        <item name="colorSecondaryVariant">@color/gray_very_huge</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- Calendar Theme -->
    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/gray_huge</item>
    </style>

    <!-- Bottom Navigation Theme -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/gray_huge</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Confirm Dialog -->
    <style name="Theme.MaterialComponents.Light.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AppCompat.Dialog.Alert</item>
    </style>
    <style name="ThemeOverlay.AppCompat.Dialog.Alert" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/white</item>
    </style>

</resources>
